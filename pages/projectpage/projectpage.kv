#:kivy 2.0.0

<ProjectWindow>:
    name: "ProjectWindow"
    project_add: project_add
    canvas.before:
        Color: 
            rgba: 0.15, 0.15, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "horizontal"
        spacing: 10
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.5
            canvas.before:
                Color: 
                    rgba: 0.24, 0.24, 0.24, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                size_hint_y: None
                height: 50
                font_size: 24
                text_size: self.width, None
                halign: 'center'
                text: "Projects"
            ScrollView:
                GridLayout:
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: [0, 5]
                    id: project_add

            Button:
                pos_hint: {"x": 0, "y": 0}
                size_hint: 1, None
                height: 50
                font_size: 24
                text_size: self.width, None
                halign: 'center'
                text: "Add Project"
                on_press: root.open_popup()

            Button:
                pos_hint: {"x": 0, "y": 0}
                size_hint: 1, None
                height: 50
                font_size: 24
                text_size: self.width, None
                halign: 'center'
                text: "Choose Images"
                on_press: 
                    if root.on_start_button(): app.root.current = "ComparisonWindow"; root.manager.transition.direction = "up"